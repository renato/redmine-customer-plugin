<%= error_messages_for 'customer' %>

<div class="box"> 
  <p>
    <%= f.text_field 'name', :label=>l(:field_customer_name) -%>
  </p>
  <p>
    <%= f.text_field 'company', :label=>l(:field_customer_company) -%>
  </p>
  <p>
    <%= f.text_area 'address', :label=>l(:field_customer_address), :rows => 5 -%>
  </p>
  <p>
    <%= f.text_field 'phone', :label=>l(:field_customer_phone) -%>
  </p>
  <p>
    <%= f.text_field 'email', :label=>l(:field_customer_email) -%>
  </p>
  <p>
    <%= f.text_field 'website', :label=>l(:field_customer_website) -%>
  </p>
  <p>
    <%= f.text_field 'skype_name', :label=>l(:field_customer_skype) -%>
  </p>
  <p>
    <%= f.select :software_id, Software.find(:all).collect {|s| [s.name, s.id]}, :label=>l(:field_customer_software) %>
  </p>
  <p>
    <%= f.text_field 'software_version', :label=>l(:field_customer_software_version) -%>
  </p>
  <p>
    <%= f.text_field 'contact_name', :label=>l(:field_customer_contact_name) -%>
  </p>
  <p>
    <%= f.text_field 'contact_phone', :label=>l(:field_customer_contact_phone) -%>
  </p>
  <p>
    <%= f.text_area 'notes', :label=>l(:field_customer_notes), :rows => 5 -%>
  </p>
  <p>
    <%= f.check_box 'blocked', :label=>l(:field_customer_blocked) -%>
  </p>
</div>
